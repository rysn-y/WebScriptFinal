<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom Styles -->
    <link rel="stylesheet" href="/stylesheets/style.css">

    <script>
        window.onload = function() {
            const urlParams = new URLSearchParams(window.location.search);
            const create = urlParams.get('create'); // Check if the submission was succesful
            
            if (create == 'true') {
                // pop up message informing about success
                alert('Reminder Created Successfully!');
            }
        };
    </script>


</head>
<body>
    <nav class="navbar navbar-expand-lg" style="background-color: #1565c0;">
        <div class="container-fluid">
            <a class="navbar-brand text-white" href="/">
                <img src="/images/aaaaa.png" alt="RecallNow Logo" width="30" height="30">
                RecallNow
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link text-white" href="/edit">Edit</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="/create">Create</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="/reminders">Reminders</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="/login">Login</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="form-container">
        <form method="POST">
            <h2>Create Reminder</h2>
            <div>
                <label>Title:</label>
                <input type="text" name="title" required />
                
                <label>Description:</label>
                <textarea name="description" rows="4" required></textarea>
                
                <label>Date:</label>
                <input type="date" name="date" required />
                
                <label>Time:</label>
                <input type="time" name="time" required />
                
                <label>Category:</label>
                <input type="text" name="category" />
            </div>
            <div class="button-group">
                <button type="submit" class="btn-save">Save Changes</button>
                <a href="/" class="h4 text-dark">
                    <button type="button" class="btn-cancel">Cancel</button>
                </a>
            </div>
        </form>
    </div>
    <footer class="bg-light text-center text-muted py-3 mt-5">
        <p>&copy; 2024 RecallNow. All rights reserved.</p>
    </footer>
    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>